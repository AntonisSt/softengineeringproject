<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fading_blue" >
    
	
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Όνομα χρήστη"
        android:gravity="center_horizontal"
        />
    
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username"
        android:hint="Κωδικός"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        />
    
    <RadioGroup
        android:id="@+id/typegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password" >
        
        <RadioButton
            android:id="@+id/userRadioButton"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Χρήστης"
        	android:textColor="#000000" />
        
        <RadioButton
            android:id="@+id/adminRadioButton"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Διαχειριστής"
        	android:textColor="#000000" />
        
    </RadioGroup>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/typegroup">
    
	    <Button 
	        android:id="@+id/login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/backdialog"
	        android:text="Σύνδεση"
	        />
	    
	    <Button 
	        android:id="@+id/signup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/backdialog"
	        android:layout_toRightOf="@+id/login"
	        android:text="Εγγραφή"
	        />
    
    </RelativeLayout>
    

</RelativeLayout>

